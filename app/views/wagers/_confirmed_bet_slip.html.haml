.card.text-bg-success.mb-3{ style: "width: 100%;" }
  .card-body
    .float-start
      %h5.card-title= "#{bet_slip.account.name} Confirmed Wagers".squish
    .float-end
      %p.card-text
        = "In play: #{currency(bet_slip.wagers.sum(&:amount))}"
        %br
        = "Potential Winnings: #{currency(bet_slip.wagers.sum(&:potential_profit))}"
  %ul.list-group.list-group-flush
    - bet_slip.wagers.each_with_index do |wager, index|
      %li.d-flex.list-group-item.align-items-center{ id: "confirmed-wager-#{wager.id}", class: (index % 2 == 0 ? "bg-secondary" : "bg-secondary") }
        .flex-fill= wager
        = "To Win: #{currency(wager.potential_profit)}"
