.card.text-bg-warning.mb-3{ style: "width: 100%;" }
  .card-body
    .float-start
      %h5.card-title= "#{bet_slip.account.name} Pending Wagers"
    .float-end
      = link_to "Confirm",
        confirm_pending_wagers_path,
        method: :post,
        class: "card-link btn btn-primary"
      = link_to "Cancel All",
        cancel_pending_wagers_path,
        method: :delete,
        data: { confirm: "Cancel #{bet_slip.wagers.size} wager(s)?"},
        class: "card-link btn btn-secondary"

  %ul.list-group.list-group-flush
    - bet_slip.wagers.each_with_index do |wager, index|
      %li.d-flex.list-group-item.align-items-center{ id: "pending-wager-#{wager.id}", class: (index % 2 == 0 ? "bg-secondary" : "bg-secondary") }
        .flex-fill= wager
        = "To Win: #{currency(wager.potential_profit)}"
        .ms-2= link_to ("<i class='bi bi-x-lg text-danger-emphasis'></i>").html_safe, wager_path(wager),
          method: :delete,
          remote: true,
          data: { confirm: "Delete this wager?" },
          class: "icon-link icon-link-hover"
